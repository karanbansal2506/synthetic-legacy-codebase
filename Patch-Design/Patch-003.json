        "transaction_logs"
      ],
      "modules": [
        "AuditLoggingModule"
      ]
    }
  },

  "affected_code_context": {
    "primary_logical_module": "SettlementProcessor",
    "secondary_logical_modules": [
      "AuditLoggingModule"
    ],
    "code_anchors": [
      "processTransaction",
      "writeExtendedLog"
    ]
  },

  "code_change": {
    "language": "COBOL",
    "change_type": "additive",
    "isolation_level": "guarded",
    "files": [
      {
        "path": "src/audit/AuditLoggingModule.cbl",
        "diff": [
          "+ IF TXN-AMOUNT > 500000",
          "+   PERFORM WRITE-EXTENDED-LOG",
          "+ END-IF"
        ]
      }
    ]
  },

  "constraints_introduced": {
    "invariants_that_must_hold": [
      "Logging must not delay settlement execution"
    ],
    "backward_compatibility_rules": [
      "Existing log parsers remain functional"
    ]
  },

