  "guard": {
    "condition": {
      "expression": "override.applied == true"
    },
    "scope": {
      "applies_to": [
        {
          "module": "SettlementProcessor",
          "function": "finalizeTransaction"
        }
      ]
    },
    "enforcement": {
      "mode": "hard",
      "fallback_behavior": "require_annotation"
    }
  },

  "intent": {
    "summary": "Require annotation when compliance-related overrides are applied",
    "rationale": [
      "Auditors questioned undocumented manual interventions",
      "Operations demanded override capability remain intact"
    ],
    "non_goals": [
      "No override prevention",
      "No automated approval workflow"
    ]
  },

  "risk_profile": {
    "declared_risks": [
      "annotation_quality_variance",
      "operator_error"
    ],
    "risk_level": "medium",
    "blast_radius_estimate": {
      "data": [
        "override_log"
      ],
      "modules": [
        "SettlementProcessor",
        "AuditLoggingModule"
      ]
    }
  },

  "affected_code_context": {
    "primary_logical_module": "SettlementProcessor",
    "secondary_logical_modules": [
      "AuditLoggingModule"
    ],
    "code_anchors": [
      "finalizeTransaction"
    ]
  },

  "code_change": {
    "language": "COBOL",
    "change_type": "behavioral",
    "isolation_level": "guarded",
    "files": [
      {
        "path": "src/settlement/SettlementProcessor.cbl",
        "diff": [
          "+ IF OVERRIDE-APPLIED",
          "+   IF OVERRIDE-NOTE IS EMPTY",
          "+     ABORT TRANSACTION",
          "+   END-IF",
          "+ END-IF"
        ]
      }
    ]
  },

  "constraints_introduced": {
    "invariants_that_must_hold": [
      "Override capability must remain available"
    ],
    "backward_compatibility_rules": [
      "Non-override flows unchanged"
    ]
  },

  "non_interference": {
    "invariant": {
      "description": "Normal settlement unaffected when override=false",
      "enforcement": {
        "method": [
          "guard_false_path_testing"
        ]
      }
    },
    "monitored_outputs": [
      "transaction_status"
    ]
  },

  "verification": {
